<div class="logInForm">
  <br><br><br>
  
  <h2 class="coolText">Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <br>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
    <br>
    <h4>Send me reset password instructions!</h4>
    <div class="actions">
      <%= f.submit "click here to send" , :class => 'btn' %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>